i = 1
def Display(no):
    global i
    j = 0
    if(i <= no):
        j = 1
        while(j <= i):
            print("*", end=" ")
            j += 1
        print()
        i += 1
        Display(no)
    
def main():
    print("Enter the number: ")
    value = int(input())

    Display(value)

if __name__ == "__main__":
    main()